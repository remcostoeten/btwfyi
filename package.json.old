{
  "name": "vigilo-monorepo",
  "version": "0.0.11",
  "description": "A lightweight task awareness overlay for development environments",
  "author": "Remco Stoeten",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/remcostoeten/vigilo.git"
  },
  "keywords": [
    "todo",
    "focus",
    "overlay",
    "developer-tools",
    "awareness"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean",
    "version:patch": "node scripts/version.js patch",
    "version:minor": "node scripts/version.js minor",
    "version:major": "node scripts/version.js major",
    "release": "node scripts/release.js",
    "example:react": "pnpm --filter vigilo-react-example dev",
    "example:vue": "pnpm --filter vigilo-vue-example dev"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "vue": "^3.5.13",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.0.0"
}
